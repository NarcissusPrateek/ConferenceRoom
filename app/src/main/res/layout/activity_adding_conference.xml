<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".AddingConference">


    <!--<include layout="@layout/toolbar"></include>-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp" >
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:layout_marginTop="10dp">

            <EditText
                    android:id="@+id/conference_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:drawableStart="@drawable/ic_room_black_24dp"
                    android:drawableLeft="@drawable/ic_room_black_24dp"
                    android:drawablePadding="5dp"
                    android:maxLength="20"
                    android:hint="Room Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <fr.ganfra.materialspinner.MaterialSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conference_Capacity"
                android:ems="10"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#A9A9A9"
                app:ms_floatingLabelText="Select Capacity"
                app:ms_hint="Please Select Capacity"
                app:ms_multiline="true"
                app:ms_hintColor="#000000"
                android:layout_marginTop="10dp">
        </fr.ganfra.materialspinner.MaterialSpinner>
        <Button android:id="@+id/add_conference_room"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:background="@color/colorPrimary"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>

