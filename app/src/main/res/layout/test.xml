<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:id="@+id/NameTextView"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textSize="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:id="@+id/inputbuildingTextView"
    />
    </LinearLayout>

   <LinearLayout
           android:id="@+id/building"
           android:layout_below="@+id/name"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building"
            android:textSize="30dp"
            android:layout_below="@+id/NameTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/BuildingTextView"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building  Name"
            android:textSize="30dp"
            android:layout_marginLeft="180dp"
            android:layout_alignLeft="@id/BuildingTextView"
            android:layout_marginTop="120dp"
            android:id="@+id/inputnameTextView"
    />

   </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/Room"
            android:layout_alignTop="@+id/building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room"
            android:textSize="30dp"
            android:layout_below="@+id/BuildingTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/RoomTextView"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room"
            android:textSize="30dp"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/BuildingTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/inputRoomTextView"
    />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_alignTop="@+id/Room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="30dp"

            android:layout_marginTop="20dp"
            android:id="@+id/DateTextView"
    />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="30dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="180dp"
            android:id="@+id/inputDateTextView"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Time"
            android:textSize="30dp"
            android:layout_below="@+id/DateTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/FromTimeTextView"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Time"
            android:textSize="30dp"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/DateTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/inputFromTimeTextView"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Time"
            android:textSize="30dp"
            android:layout_below="@+id/FromTimeTextView"
            android:layout_marginTop="20dp"
            android:id="@+id/ToTimeTextView"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Time"
            android:textSize="30dp"
            android:layout_below="@+id/FromTimeTextView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="180dp"
            android:id="@+id/inputToTimeTextView"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/purpose"
            android:hint="Purpose"
            android:layout_below="@id/ToTimeTextView"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Book"
            android:layout_below="@+id/purpose"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
    />
</RelativeLayout>