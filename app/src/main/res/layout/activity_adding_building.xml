<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        tools:context=".Activity.AddingBuilding">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sign_up_input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp">

        <EditText
                android:id="@+id/input_buildingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:backgroundTintMode="@color/white"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_building_black_24dp"
                android:drawablePadding="5dp"
                android:maxLength="20"
                android:hint="@string/building_name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sign_up_input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp">
        <EditText
                android:id="@+id/input_buildingPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:inputType="text"
                android:hint="@string/location"
                android:drawableStart="@drawable/ic_room_black_24dp"
                android:drawablePadding="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button android:id="@+id/add_building"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ADD"
            android:background="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"/>

</LinearLayout>



