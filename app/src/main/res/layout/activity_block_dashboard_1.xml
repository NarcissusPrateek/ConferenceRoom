<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#D3D1D1"
        android:id="@+id/r1_dashboard"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:stackFromEnd="true"
            app:reverseLayout="true"
            android:id="@+id/dashbord_recyclerview1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/block_dashboard_list"/>
    <ImageView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:src="@drawable/emptystate"
    />

    <com.github.clans.fab.FloatingActionButton
            android:src="@drawable/fab_add"
            android:id="@+id/user_input"
            app:fab_label="Book Rooms"
            android:layout_alignParentEnd="true"
            app:fab_size="normal"
            app:fab_colorPressed="@color/colorPrimary1"
            app:menu_colorPressed="@color/colorPrimary"
            app:fab_colorNormal="@color/colorPrimary"
            android:layout_alignParentBottom="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>

