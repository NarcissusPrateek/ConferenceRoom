<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".Activity.UpdateBookingActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp" >
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

            <EditText
                    android:focusable="false"
                    android:editable="false"
                    android:id="@+id/Purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:drawableStart="@drawable/pencil"
                    android:drawableLeft="@drawable/pencil"
                    android:drawablePadding="5dp"
                    android:maxLength="50"
                    android:hint="Purpose"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">

            <EditText
                    android:id="@+id/fromTime_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:focusable="false"
                    android:drawableStart="@drawable/ic_schedule_black_24dp"
                    android:drawableLeft="@drawable/ic_schedule_black_24dp"
                    android:drawablePadding="5dp"
                    android:maxLength="50"
                    android:hint="From-Time"/>
            <!--android:ellipsize="end"-->
            <!--android:singleLine="true"-->

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">
            <EditText
                    android:id="@+id/toTime_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="text"
                    android:hint="To-Time"
                    android:drawableStart="@drawable/ic_schedule_black_24dp"
                    android:drawableLeft="@drawable/ic_schedule_black_24dp"
                    android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ems="10"
                      android:focusable="false"
                      android:id="@+id/date_update"
                      android:hint="Date"
                      android:drawableStart="@drawable/ic_today_black_24dp"
                      android:drawableLeft="@drawable/ic_today_black_24dp"
                      android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ems="10"
                      android:focusable="false"
                      android:id="@+id/buildingname"
                      android:hint="Building Name"
                      android:drawableStart="@drawable/ic_building_black_24dp"
                      android:drawableLeft="@drawable/ic_building_black_24dp"
                      android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ems="10"
                      android:editable="false"
                      android:focusable="false"
                      android:id="@+id/conferenceRoomName"
                      android:hint="Room name"
                      android:drawableStart="@drawable/ic_room_black_24dp"
                      android:drawableLeft="@drawable/ic_room_black_24dp"
                      android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button android:id="@+id/update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:background="@color/colorPrimary"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
