<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.conferencerommapp">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/letterm"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@drawable/letterm"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".Activity.SplashScreen"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SignInwithSilentClient">
        </activity>
        <activity
                android:name=".Activity.UserInputActivity"
                android:label="Input"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.UserBookingsDashboardActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.ManagerSelectMeetingMembers"
                android:parentActivityName=".Activity.ManagerConferenceRoomActivity"
                android:screenOrientation="portrait"
                android:launchMode="singleTop">
        </activity>
        <activity android:name=".Activity.SelectMeetingMembersActivity"
                  android:launchMode="singleTop"
                  android:parentActivityName=".Activity.ConferenceRoomActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.UpdateBookingActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.UserBookingsDashboardActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.ProjectManagerInputActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.UserBookingsDashboardActivity">
        </activity>
        <activity
                android:name=".Activity.ManagerBookingActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.ConferenceRoomActivity">
        </activity>
        <activity
                android:name=".Activity.ManagerConferenceRoomActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.BuildingsActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.UserBookingsDashboardActivity"
                android:label="Bookings"
                android:launchMode="singleTop"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Activity.ManagerBuildingsActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.ProjectManagerInputActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Activity.BuildingsActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.UserInputActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.ConferenceRoomActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.BuildingsActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".SignIn"
                android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
                android:name=".Activity.BookingActivity"
                android:label="Booking"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.SelectMeetingMembersActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Activity.AddingBuilding"
                android:label="Add Building"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.BuildingDashboard"
                android:screenOrientation="portrait">

        </activity>
        <activity
                android:name=".Activity.AddingConference"
                android:label="Add Conference Room"
                android:parentActivityName=".Activity.ConferenceDashBoard"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.BuildingDashboard"
                android:parentActivityName=".Activity.UserBookingsDashboardActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".RegistrationActivity"
                android:label="Registration"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Activity.BlockedDashboard"
                android:parentActivityName=".Activity.UserBookingsDashboardActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Activity.BlockConferenceRoomActivity"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.BlockedDashboard"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Activity.ConferenceDashBoard"
                android:launchMode="singleTop"
                android:parentActivityName=".Activity.BuildingDashboard"
                android:screenOrientation="portrait"/>
    </application>

</manifest>